@page
@model Mellow.RazorPage.Pages.Account.LoginModel
@{
}

<div class="col-md-6 col-lg-5 col-xl-4 mt-5 mt-md-0">
    <form id="form" class="form-group flex-wrap bg-white p-5 rounded-4 ms-md-5" method="post">
        <h3 class="display-5">Login Form</h3>

        <div class="col-lg-12 my-4">
            <label class="form-label text-uppercase" asp-for="@Model.ModelInput.Email">Email</label>
            <input class="form-control text-black-50 ps-3" asp-for="@Model.ModelInput.Email">
            <span asp-validation-for="@Model.ModelInput.Email" class="text-danger"></span>
        </div>
      
        <div class="col-lg-12 my-4">
            <label class="form-label text-uppercase" asp-for="@Model.ModelInput.Password">Password</label>
            <input class="form-control text-black-50 ps-3" asp-for="@Model.ModelInput.Password">
            <span asp-validation-for="@Model.ModelInput.Password" class="text-danger"></span>

        </div>
     
        <div class="d-grid">
            <button type="submit" class="btn btn-arrow btn-primary mt-3">
                <span>
                    Submit
                    <svg width="18" height="18">
                        <use xlink:href="#arrow-right"></use>
                    </svg>
                </span>
            </button>
        </div>
    </form>
</div>

<partial name="_ValidationScriptsPartial" />